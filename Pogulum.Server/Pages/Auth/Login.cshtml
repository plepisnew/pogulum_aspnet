@* @page *@
@model String
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/a526db7a67.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Nunito:wght@300;400;500;600&family=Poppins:wght@300;400;500;600&display=swap"
        rel="stylesheet">
        <link rel="stylesheet" href="~/css/login.css">
    <title>Login</title>
</head>

<body>

    <form action="/api/Auth/Login" method="post" enctype="application/x-www-form-urlencoded">

        <div class="input-container">
            <i class="fa-solid fa-user"></i>
            <input type="text" placeholder="Username" name="username" />
        </div>
        <div class="input-container">
            <i class="fa-solid fa-key"></i>
            <input type="password" placeholder="Password" name="password" />
        </div>
        <button type="submit">Login</button>
        <span class="info-span">Don't have an account? Register @Html.ActionLink("here", "RegisterPage", "Auth")</span>
        @if(ViewData["Error"] != null) {
            <span class="error-span">@ViewData["Error"]</span>
        }

    </form>
</body>
</html>